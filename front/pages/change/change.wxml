    <!--button bindtap="playafter" class='btn'>播放转换后录音</button-->
    </view>
    <view class="submit-button-container">
    <button bindtap="goback" class = "btn btn-goback" disabled="{{change_finish == 1?submitDisable:(current_tag == null?'true':(current_tag == 1?'true':submitDisable))}}">{{change_finish == 1?'再试一次':'取消'}}</button>
    <button bindtap="uplo" class = "{{change_finish == 1?'view_hide':'btn btn-uplo'}}" disabled="{{current_tag == null?'true':(current_tag == 1?'true':submitDisable)}}">转换</button>
    </view>
  </view>
