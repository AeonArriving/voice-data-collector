<!--read.wxml-->
<view class="main-container">
  <view class="title-container">
    <view class="title-inner-container">
      <view class="title-pack">
        <view class="title-text">
          {{emotionBefore}}
        </view>
        <view class="title-text" style="color: #FF69B4">
          {{TheEmotion}}
        </view>
        <view class="title-text">
          {{emotionAfter}}
        </view>
      </view>
      
      <view class="subtitle-text">
        {{TheText}}
      </view>
    </view>
  </view>
  
  <view wx:if="{{recordDisable}}" class="iconfont icon-sound sound-btn-disable">
  </view>
  <view wx:else bindtap="{{current_tag == 2?'play':(current_tag == 1?'stop':'start')}}" class="{{current_tag == 2?'iconfont icon-playcircle playcircle-btn':(current_tag == 1?'iconfont icon-stop timeout-btn':'iconfont icon-sound sound-btn')}}">
  </view>
  <view class="hint-text">{{current_tag == 2?'播放录音':(current_tag == 1?'停止录音':'开始录音')}}
  </view>


  <view wx:if="{{submitStat=='submit'}}" class="submit-button-container">
    <view bindtap="uplo" class = "btn btn-uplo" disabled="{{current_tag == null?'true':(current_tag == 1?'true':submitDisable)}}">
    上传
    </view>
    <view bindtap="goback" class = "btn btn-goback" disabled="{{current_tag == null?'true':(current_tag == 1?'true':submitDisable)}}">
    取消
    </view>
  </view>
  <view wx:elif="{{submitStat=='wait'}}" class="submit-button-container">
    <view class="btn btn-y">正在提交...</view>
  </view>
  <view wx:else class="submit-button-container">
    <view class="btn btn-y">请等待...</view>
  </view>

</view>
